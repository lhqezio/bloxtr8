#!/bin/sh

# Pre-commit hook to run linting and formatting
# This ensures code quality before commits

echo "ğŸ” Running pre-commit checks..."

# Run linting with auto-fix
echo "ğŸ“ Running pnpm lint:fix..."
if ! pnpm lint:fix; then
    echo "âŒ Linting failed. Please fix the issues and try again."
    exit 1
fi

# Run formatting
echo "ğŸ¨ Running pnpm format..."
if ! pnpm format; then
    echo "âŒ Formatting failed. Please fix the issues and try again."
    exit 1
fi

echo "âœ… Pre-commit checks passed!"
exit 0
