# =============================================================================
# Bloxtr8 Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/bloxtr8

# =============================================================================
# Discord Configuration
# =============================================================================
# Discord OAuth2 Application
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Discord Bot Token
DISCORD_BOT_TOKEN=your_discord_bot_token

# =============================================================================
# Payment Processing (Stripe)
# =============================================================================
# Stripe API Keys (use test keys for development)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# Custodian Services (USDC on Base)
# =============================================================================
# Custodian API for cryptocurrency escrow
CUSTODIAN_API_KEY=your_custodian_api_key
CUSTODIAN_WEBHOOK_SECRET=your_custodian_webhook_secret

# =============================================================================
# Security & Authentication
# =============================================================================
# JWT Secret for token signing (generate a strong random string)
JWT_SECRET=your_jwt_secret_minimum_32_characters_long

# =============================================================================
# AWS S3 Configuration
# =============================================================================
# For contract PDF storage
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# =============================================================================
# Risk Screening Services
# =============================================================================
# TRM Labs API for wallet screening
TRM_API_KEY=your_trm_api_key

# Chainalysis API for compliance screening
CHAINALYSIS_API_KEY=your_chainalysis_api_key

# =============================================================================
# Optional: DocuSign Integration
# =============================================================================
# For contract generation and signing
DOCUSIGN_CLIENT_ID=your_docusign_client_id
DOCUSIGN_CLIENT_SECRET=your_docusign_client_secret
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id

# =============================================================================
# Optional: Monitoring & Logging
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn

# Log level (debug, info, warn, error)
LOG_LEVEL=info
