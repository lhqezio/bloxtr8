{
  "name": "bloxtr8",
  "version": "1.0.0",
  "description": "Discord-native escrow and verification system for Roblox game trading",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node scripts/index.mjs env:dev dotenvx run -- turbo run dev",
    "build": "node scripts/index.mjs env:prod dotenvx run -- turbo run build",
    "build:dev": "node scripts/index.mjs env:dev dotenvx run -- turbo run build",
    "test": "node scripts/index.mjs env:dev dotenvx run -- turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "dotenvx run -- pnpm --filter=@bloxtr8/database generate",
    "db:push": "dotenvx run -- pnpm --filter=@bloxtr8/database push",
    "db:migrate": "dotenvx run -- pnpm --filter=@bloxtr8/database migrate",
    "db:reset": "dotenvx run -- pnpm --filter=@bloxtr8/database reset",
    "db:studio": "dotenvx run -- pnpm --filter=@bloxtr8/database studio",
    "db:seed": "dotenvx run -- pnpm --filter=@bloxtr8/database seed",
    "env:encrypt": "dotenvx encrypt",
    "env:decrypt": "dotenvx decrypt",
    "env:encrypt:dev": "node scripts/index.mjs env:encrypt:dev",
    "env:encrypt:all": "pnpm env:encrypt:dev && pnpm env:encrypt:prod",
    "env:decrypt:dev": "node scripts/index.mjs env:decrypt:dev",
    "env:encrypt:prod": "node scripts/index.mjs env:encrypt:prod",
    "env:decrypt:prod": "node scripts/index.mjs env:decrypt:prod",
    "env:decrypt:all": "pnpm env:decrypt:dev && pnpm env:decrypt:prod",
    "env:refresh:dev": "pnpm env:encrypt:dev && rimraf .env ./apps/*/.env && pnpm env:decrypt:dev && node scripts/index.mjs env:dev",
    "env:set": "dotenvx set",
    "env:get": "dotenvx get",
    "env:ls": "dotenvx ls",
    "env:rotate": "dotenvx rotate",
    "env:keypair": "dotenvx keypair",
    "docker:build": "node scripts/index.mjs docker:build",
    "docker:dev": "node scripts/index.mjs docker:dev",
    "docker:dev:build": "node scripts/index.mjs docker:dev:build",
    "docker:prod": "node scripts/index.mjs docker:prod",
    "docker:db": "node scripts/index.mjs docker:db",
    "docker:test": "node scripts/index.mjs docker:test",
    "docker:up": "node scripts/index.mjs docker:up",
    "docker:down": "node scripts/index.mjs docker:down",
    "docker:logs": "node scripts/index.mjs docker:logs",
    "docker:stats": "node scripts/index.mjs docker:stats",
    "docker:clean": "node scripts/index.mjs docker:clean",
    "docker:prune": "node scripts/index.mjs docker:prune",
    "docker:rebuild": "node scripts/index.mjs docker:rebuild"
  },
  "keywords": [
    "roblox",
    "discord",
    "escrow",
    "trading",
    "fintech"
  ],
  "author": "Bloxtr8 Team",
  "license": "ISC",
  "packageManager": "pnpm@10.16.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@bloxtr8/eslint-config": "workspace:*",
    "@types/jest": "^29.5.8",
    "eslint": "^9.35.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.49.1"
  }
}
