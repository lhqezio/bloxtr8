{
  "name": "bloxtr8",
  "version": "1.0.0",
  "description": "Discord-native escrow and verification system for Roblox game trading",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "./scripts/env-dev.sh dotenvx run -- turbo run dev",
    "build": "./scripts/env-prod.sh dotenvx run -- turbo run build",
    "build:dev": "./scripts/env-dev.sh dotenvx run -- turbo run build",
    "test": "./scripts/env-dev.sh dotenvx run -- turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:format": "dotenvx run -- pnpm --filter=@bloxtr8/database format",
    "db:generate": "dotenvx run -- pnpm --filter=@bloxtr8/database generate",
    "db:push": "dotenvx run -- pnpm --filter=@bloxtr8/database push",
    "db:migrate": "dotenvx run -- pnpm --filter=@bloxtr8/database migrate",
    "db:reset": "dotenvx run -- pnpm --filter=@bloxtr8/database reset",
    "db:studio": "dotenvx run -- pnpm --filter=@bloxtr8/database studio",
    "db:seed": "dotenvx run -- pnpm --filter=@bloxtr8/database seed",
    "env:encrypt": "dotenvx encrypt",
    "env:decrypt": "dotenvx decrypt",
    "env:encrypt:dev": "./scripts/env-encrypt-dev.sh",
    "env:encrypt:all": "pnpm env:encrypt:dev && pnpm env:encrypt:prod",
    "env:decrypt:dev": "./scripts/env-decrypt-dev.sh",
    "env:encrypt:prod": "./scripts/env-encrypt-prod.sh",
    "env:decrypt:prod": "./scripts/env-decrypt-prod.sh",
    "env:decrypt:all": "pnpm env:decrypt:dev && pnpm env:decrypt:prod",
    "env:refresh:dev": "pnpm env:encrypt:dev && rm -f .env ./apps/*/.env && pnpm env:decrypt:dev && ./scripts/env-dev.sh",
    "env:set": "dotenvx set",
    "env:get": "dotenvx get",
    "env:ls": "dotenvx ls",
    "env:rotate": "dotenvx rotate",
    "env:keypair": "dotenvx keypair",
    "docker:build": "./scripts/docker-optimize.sh build-fast",
    "docker:dev": "./scripts/docker-optimize.sh dev",
    "docker:dev:build": "./scripts/docker-optimize.sh dev-build",
    "docker:prod": "./scripts/docker-optimize.sh prod",
    "docker:db": "./scripts/docker-optimize.sh db-only",
    "docker:test": "./scripts/docker-optimize.sh test",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "./scripts/docker-optimize.sh logs",
    "docker:stats": "./scripts/docker-optimize.sh stats",
    "docker:clean": "./scripts/docker-optimize.sh clean",
    "docker:prune": "./scripts/docker-optimize.sh prune",
    "docker:rebuild": "./scripts/docker-optimize.sh rebuild"
  },
  "keywords": [
    "roblox",
    "discord",
    "escrow",
    "trading",
    "fintech"
  ],
  "author": "Bloxtr8 Team",
  "license": "ISC",
  "packageManager": "pnpm@10.16.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@bloxtr8/eslint-config": "workspace:*",
    "@types/jest": "^29.5.8",
    "eslint": "^9.35.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.49.1"
  }
}
